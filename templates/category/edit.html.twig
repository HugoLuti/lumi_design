{% extends "front/base.html.twig" %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
    <h1>Modifier la catégorie</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('category_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

    <form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn btn-danger mt-3">Supprimer</button>
    </form>
{% endblock %}